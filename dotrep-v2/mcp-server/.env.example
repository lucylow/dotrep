# MCP Server Configuration for DotRep
# Copy this file to .env and fill in your values

# DKG Configuration (inherited from dkg-integration)
DKG_ENVIRONMENT=testnet
DKG_OTNODE_URL=https://v6-pegasus-node-02.origin-trail.network:8900
DKG_BLOCKCHAIN=otp:20430

# Optional: Wallet for read operations (usually not needed for queries)
# DKG_PUBLISH_WALLET=your_private_key_here

# MCP Server Configuration
MCP_SERVER_NAME=dotrep-reputation
MCP_SERVER_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Optional: Rate limiting
# MAX_REQUESTS_PER_MINUTE=60
